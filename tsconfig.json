{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "outDir": "./dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "noEmit": true,
    "paths": {
        "#constants/*": ["constants/*"],
        "#core": ["core/index"],
        "#operators": ["operators/index"],
        "#templates/*": ["templates/*"],
        "#types": ["types/index"],
        "#utils/*": ["utils/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ]
}