    "lint": "eslint src/**/*.ts"
  },
  "author": "Nico Mendoza",
  "license": "ISC",
  "dependencies": {
    "@types/react": "^17.0.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rxjs": "^6.6.6",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.5",
    "@types/jest": "^26.0.22",
    "@types/lodash": "^4.14.168",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.23.0",
    "eslint-plugin-react": "^7.23.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1"
  },
  "test": "jest",
  "jest": {
